include ./mixins.pug

<!DOCTYPE html>
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    title Equipmanager - online booking engine, and movable managment system
    link(href="https://fonts.googleapis.com/css?family=Lobster&display=swap" rel="stylesheet")
  body
    .wrapper
      .maincontent
        include ./sections/header.pug
        section.feedback          
          .container.container-feedback
            h2.section-head Записаться на тест или задайте нам вопрос
            form(                
                method="post"
                action="robot.php"
              ).form
                ul.form__rows
                  - 
                    var rows= [ 
                      {
                          name: 'E-mail',
                          tag: 'input',
                          placeholder: 'Ваш E-mail',
                          element: 'email',
                          type: 'email'
                      },{
                          name: 'Имя',
                          tag: 'input',
                          placeholder: 'Имя',
                          element: 'name',
                          type: 'text'
                      },{
                          name: 'Телефон',
                          tag: 'input',
                          placeholder: 'Номер телефона',
                          element: 'tel',
                          type: 'number'
                      },{
                          name: 'Текст сообщения',
                          tag: 'textarea',
                          placeholder: 'Введите текст...',
                          element: 'services',
                          type: 'text'
                      },{
                          name: 'Ваше сообщение успешно отправлено',
                          tag: ''                          
                      }
                    ]
                  each row in rows                   
                    li.form__row
                      if row.tag!== ''
                        label.form__row-label
                          h4.form__row-head #{row.name}                          
                          #{row.tag}(
                            placeholder=`${row.placeholder}`
                            name=`${row.element}`
                            class=`form__row-${row.tag}`
                            type=`${row.type}`
                            required
                            )
                          .error
                      else
                        h4.form__sent-head #{row.name}
                        button.btn.btn__text.btn__other Отправить еще одно
                button.btn.btn--form
                  h3.btn__text Отправить заявку
            .feedback__send
        include ./sections/footer.pug